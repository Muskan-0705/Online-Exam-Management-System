# Database Configuration
# For Local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/online-exam-system

# For MongoDB Atlas (Cloud):
# Replace YOUR_USERNAME, YOUR_PASSWORD, and YOUR_CLUSTER with your actual values
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/online-exam-system?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
# Use a strong secret key (minimum 32 characters) for production
JWT_SECRET=your-super-secret-key-change-in-production

# Frontend Configuration
VITE_API_URL=http://localhost:5000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173
